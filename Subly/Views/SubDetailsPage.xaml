<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RentYourHome.HotelDetailsPage"
             xmlns:model="clr-namespace:Subly.Model"
             xmlns:viewmodel="clr-namespace:Subly.ViewModel"
             x:DataType="viewmodel:SubDetailsViewModel"
             Title="{Binding .}">
    <VerticalStackLayout>
        <Label 
            Text="{Binding Subscription.Name}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="24" FontAttributes="Bold" />
        <Label 
            Text="{Binding Subscription.Price}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="20"/>
        <Label 
            Text="{Binding Subscription.Date}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="20"/>
    </VerticalStackLayout>
</ContentPage>