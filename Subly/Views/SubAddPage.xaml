<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Subly.Views.SubAddPage"
             xmlns:model="clr-namespace:Subly.Model"
             xmlns:viewmodel="clr-namespace:Subly.ViewModel"
             x:DataType="viewmodel:SubAddViewModel"
             Title="New subscription">
    <ScrollView>
        <VerticalStackLayout Padding="5" Grid.Row="0" Margin="9">
            <Entry x:Name="Name" Placeholder="Enter name" Text="{Binding Name}" />
            <Entry x:Name="Address" Placeholder="Enter address" Text="{Binding Price}"/>
            <Entry x:Name="Date" Placeholder="Enter date" Text="{Binding Date}"/>
            <Line></Line>
            <Button Text="{Binding AddButtonText}" Grid.Row="1"  IsEnabled="{Binding IsNotLoading}" 
                Command="{Binding AddSubCommand}" Margin="9"/>
            <Button Text="Set Timer" Clicked="AddClicked" Grid.Row="2" Margin="9"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>